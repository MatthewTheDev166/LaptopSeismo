<Window x:Class="LaptopSeismo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="LaptopSeismo"
        Height="680"
        Width="1080"
        MinHeight="520"
        MinWidth="840"
        Background="#05060C"
        FontFamily="Segoe UI">
    <Window.Resources>
        <Style x:Key="StartButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2DBE7B" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#1A8F58" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="#31D688" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="#26A864" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="#1F3F31" />
                                <Setter Property="Foreground" Value="#9ACFB4" />
                                <Setter Property="BorderBrush" Value="#233F33" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="StopButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#B54343" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#8B3030" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="#C95959" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="#A13A3A" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="#3D2A2A" />
                                <Setter Property="Foreground" Value="#D9B8B8" />
                                <Setter Property="BorderBrush" Value="#4A3434" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SwitchToggleStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="56" />
            <Setter Property="Height" Value="28" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Border x:Name="Track"
                                    Background="#1F263A"
                                    BorderBrush="#2E3358"
                                    BorderThickness="1"
                                    CornerRadius="14" />
                            <Ellipse x:Name="Thumb"
                                     Width="20"
                                     Height="20"
                                     Fill="#303759"
                                     HorizontalAlignment="Left"
                                     Margin="4,0,0,0"
                                     VerticalAlignment="Center" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Track" Property="Background" Value="#2DBE7B" />
                                <Setter TargetName="Track" Property="BorderBrush" Value="#1A8F58" />
                                <Setter TargetName="Thumb" Property="Fill" Value="White" />
                                <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right" />
                                <Setter TargetName="Thumb" Property="Margin" Value="0,0,4,0" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Track" Property="Background" Value="#111427" />
                                <Setter TargetName="Track" Property="BorderBrush" Value="#1A1C30" />
                                <Setter TargetName="Thumb" Property="Fill" Value="#1E2439" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Padding="24"
                Background="#111427"
                BorderBrush="#2E3358"
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="LaptopSeismo"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="White" />
                        <TextBlock Text="Live vibration waveform from your laptop's accelerometer"
                                   Margin="0,6,0,0"
                                   Foreground="#8A92B6" />
                    </StackPanel>

                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                VerticalAlignment="Center">
                        <StackPanel Orientation="Vertical" Margin="0,0,18,0">
                            <TextBlock Text="Sensitivity"
                                       Foreground="#B5BCE5"
                                       Margin="0,0,0,6" />
                            <StackPanel Orientation="Horizontal">
                                <Slider x:Name="SensitivitySlider"
                                        Width="180"
                                        Minimum="0.5"
                                        Maximum="15"
                                        Value="4"
                                        TickFrequency="0.5"
                                        IsSnapToTickEnabled="False"
                                        VerticalAlignment="Center"
                                        ValueChanged="SensitivitySlider_OnValueChanged" />
                                <TextBlock Text="{Binding ElementName=SensitivitySlider, Path=Value, StringFormat={}{0:F1}x}"
                                           Foreground="#F25F5C"
                                           FontWeight="SemiBold"
                                           Margin="12,0,0,0"
                                           VerticalAlignment="Center" />
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    Margin="0,0,20,0">
                            <ToggleButton x:Name="AxisToggle"
                                          Style="{StaticResource SwitchToggleStyle}"
                                          Margin="0,0,12,0"
                                          Checked="AxisToggle_OnToggle"
                                          Unchecked="AxisToggle_OnToggle" />
                            <TextBlock Text="Axis lines"
                                       Foreground="#B5BCE5"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Button x:Name="StartButton"
                                    Content="Start"
                                    Width="92"
                                    Height="34"
                                    Margin="0,0,10,0"
                                    Style="{StaticResource StartButtonStyle}"
                                    Click="StartButton_OnClick" />
                            <Button x:Name="StopButton"
                                    Content="Stop"
                                    Width="92"
                                    Height="34"
                                    Style="{StaticResource StopButtonStyle}"
                                    Click="StopButton_OnClick" />
                        </StackPanel>
                    </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    CornerRadius="18"
                    BorderBrush="#232742"
                    BorderThickness="1">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#05060F" Offset="0" />
                        <GradientStop Color="#0B0F1D" Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>
                <Grid ClipToBounds="True">
                    <Rectangle>
                        <Rectangle.Fill>
                            <DrawingBrush TileMode="Tile" ViewboxUnits="Absolute" Viewbox="0,0,70,70">
                                <DrawingBrush.Drawing>
                                    <GeometryDrawing Brush="Transparent">
                                        <GeometryDrawing.Pen>
                                            <Pen Brush="#1D2137" Thickness="1" />
                                        </GeometryDrawing.Pen>
                                        <GeometryDrawing.Geometry>
                                            <GeometryGroup>
                                                <LineGeometry StartPoint="0,0" EndPoint="70,0" />
                                                <LineGeometry StartPoint="0,0" EndPoint="0,70" />
                                            </GeometryGroup>
                                        </GeometryDrawing.Geometry>
                                    </GeometryDrawing>
                                </DrawingBrush.Drawing>
                            </DrawingBrush>
                        </Rectangle.Fill>
                    </Rectangle>

                    <Canvas x:Name="GraphCanvas"
                            Margin="24"
                            Background="Transparent"
                            SizeChanged="GraphCanvas_OnSizeChanged"
                            ClipToBounds="True">
                        <Polyline x:Name="XAxisPolyline"
                                  Visibility="Collapsed"
                                  Stroke="#FF5252"
                                  StrokeThickness="2.2"
                                  StrokeLineJoin="Round"
                                  StrokeStartLineCap="Round"
                                  StrokeEndLineCap="Round"
                                  Opacity="0.92">
                            <Polyline.Effect>
                                <DropShadowEffect Color="#FF4F4F"
                                                  BlurRadius="14"
                                                  ShadowDepth="0"
                                                  Opacity="0.55" />
                            </Polyline.Effect>
                        </Polyline>
                        <Polyline x:Name="YAxisPolyline"
                                  Visibility="Collapsed"
                                  Stroke="#58E087"
                                  StrokeThickness="2.2"
                                  StrokeLineJoin="Round"
                                  StrokeStartLineCap="Round"
                                  StrokeEndLineCap="Round"
                                  Opacity="0.92">
                            <Polyline.Effect>
                                <DropShadowEffect Color="#41C46D"
                                                  BlurRadius="14"
                                                  ShadowDepth="0"
                                                  Opacity="0.55" />
                            </Polyline.Effect>
                        </Polyline>
                        <Polyline x:Name="ZAxisPolyline"
                                  Visibility="Collapsed"
                                  Stroke="#4FA3FF"
                                  StrokeThickness="2.2"
                                  StrokeLineJoin="Round"
                                  StrokeStartLineCap="Round"
                                  StrokeEndLineCap="Round"
                                  Opacity="0.92">
                            <Polyline.Effect>
                                <DropShadowEffect Color="#3D84D8"
                                                  BlurRadius="14"
                                                  ShadowDepth="0"
                                                  Opacity="0.55" />
                            </Polyline.Effect>
                        </Polyline>
                        <Line x:Name="BaselineLine"
                              Stroke="#394165"
                              StrokeThickness="1.5"
                              X1="0"
                              X2="0"
                              Y1="0"
                              Y2="0" />
                        <Polyline x:Name="WaveformPolyline"
                                  Stroke="#FF5252"
                                  StrokeThickness="2.4"
                                  StrokeLineJoin="Round"
                                  StrokeStartLineCap="Round"
                                  StrokeEndLineCap="Round">
                            <Polyline.Effect>
                                <DropShadowEffect Color="#D83A3A"
                                                  BlurRadius="18"
                                                  ShadowDepth="0"
                                                  Opacity="0.65" />
                            </Polyline.Effect>
                        </Polyline>
                    </Canvas>
                </Grid>
            </Border>

            <Border Grid.Row="1"
                    Margin="0,18,0,0"
                    Padding="16,12"
                    CornerRadius="12"
                    Background="#10132A"
                    BorderBrush="#1E2343"
                    BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="StatusTextBlock"
                               Text="Initializing..."
                               Foreground="#8590C8"
                               VerticalAlignment="Center" />

                    <TextBlock x:Name="MagnitudeTextBlock"
                               Grid.Column="1"
                               Text="Magnitude: 0.000 g"
                               Foreground="#68D8A0"
                               FontWeight="SemiBold"
                               Margin="18,0,0,0"
                               VerticalAlignment="Center" />
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
